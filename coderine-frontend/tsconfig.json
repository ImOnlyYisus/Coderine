{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "vue3-split-panel": ["node_modules/vue3-split-panel/dist/vue3-split-panel.umd.js"],
      "types" : ["vue3-split-panel"]
    },
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
